---
import { Image } from '@astrojs/image/components'

type Props = {
  title: string
  description: string
  pubDate: string
  heroImage: string
  tags: Array<string>
  slug: string
}
const { title, description, pubDate, heroImage, tags, slug } = Astro.props
---

<div class="shadow-md rounded bg-white dark:bg-gray-800 transition">
  <a href={`/posts/${slug}`}>
    <Image
      class="rounded-t"
      src={heroImage}
      alt={title}
      height={900}
      width={1600}
      format="jpeg"
    />
  </a>
  <div class="p-8 sm:p-12">
    <div class="flex gap-x-4 text-sm">
      {
        tags.map((tag) => (
          <a class="text-sora" href={`/tags/${tag}`}>
            {tag}
          </a>
        ))
      }
      <div class="border-l border-gray-300 dark:border-gray-500 transition">
      </div>
      <span class="text-gray-300 dark:text-gray-500 transition">{pubDate}</span>
    </div>
    <h2 class="mt-8">
      <a
        class="text-gray-900 text-2xl dark:text-white hover:text-sora dark:hover:text-sora font-bold transition"
        href={`/posts/${slug}`}
      >
        {title}
      </a>
    </h2>
    <p class="mt-8 leading-8">
      {description}
    </p>
    <div class="mt-8">
      <a
        class="inline-block border px-8 py-2 border-gray-300 dark:border-gray-500 text-gray-300 dark:text-gray-500 hover:text-white hover:bg-sora dark:hover:text-white transition"
        href={`/posts/${slug}`}
      >
        阅 读
      </a>
    </div>
  </div>
</div>
