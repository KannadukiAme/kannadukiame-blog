---
import Tag from '@components/Tag.astro'

type Props = {
  title: string
  pubDate: string
  heroImage: string
  description: string
  tags: Array<string>
}

const { title, pubDate, heroImage, description, tags } = Astro.props
---

<div
  class="h-96 bg-cover bg-center bg-no-repeat dark:text-gray-50"
  style={{
    backgroundImage: `url('${heroImage}')`,
  }}
>
  <div
    class="h-full flex px-4 backdrop-contrast-50 dark:backdrop-contrast-100 dark:backdrop-brightness-50"
  >
    <div class="flex flex-col container mx-auto self-center">
      <div class="text-4xl font-bold md:text-6xl text-center">
        {title}
      </div>
      <div class="text-base text-right font-bold mt-8">
        {pubDate}
      </div>
      <div class="flex justify-center gap-[2rem]">
        {tags.map((tag) => <Tag text={tag} href={`/tags/${tag}`} />)}
      </div>
      <div class="text-xl md:text-2xl font-bold mt-12">
        {description}
      </div>
    </div>
  </div>
</div>
