---
import HeaderRight from '@components/HeaderRight'
import siteConfig from '@utils/config'

const { pathname } = Astro.url
---

<header class="flex p-4 bg-gray-50 dark:bg-gray-900">
  <div class="flex-1 flex space-x-6">
    <div class="text-gray-900 dark:text-gray-50 text-3xl">
      {siteConfig.title}
    </div>
  </div>
  <HeaderRight pathname={pathname} client:only="react" />
</header>
