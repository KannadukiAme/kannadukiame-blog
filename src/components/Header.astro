---
import siteConfig from '@utils/config'
import DarkMode from './DarkMode.svelte'
import SearchButton from './SearchButton.astro'

type Props = {
  pathname: string
}

const { pathname } = Astro.props
---

<header
  class="flex p-4 bg-gray-50 dark:bg-gray-950 border-b border-gray-200 dark:border-black sticky top-0 z-10"
>
  <div class="flex-1 flex space-x-6 items-center">
    <slot />
    <div class="text-gray-900 dark:text-gray-50 text-3xl hidden sm:block">
      {siteConfig.heading}
    </div>
  </div>
  <div class="flex px-2 py-2 space-x-6 items-center">
    <div>
      <SearchButton />
    </div>
    <div class="flex space-x-6 text-gray-300">
      <div class="flex space-x-6 text-gray-300">
        {
          siteConfig.nav.map((item) => {
            const isActive =
              (item.href === '/' && pathname === '/') ||
              (item.href !== '/' && pathname.startsWith(item.href))

            return (
              <a
                href={item.href}
                class={`font-bold hover:text-sora-600 ${
                  isActive ? 'text-sora-700' : ''
                }`}
              >
                {item.name}
              </a>
            )
          })
        }
      </div>
      <div
        class="flex gap-x-6 text-gray-900 dark:text-gray-50 before:border-l before:border-gray-200"
      >
        <DarkMode client:only="svelte" />
      </div>
    </div>
  </div>
</header>
