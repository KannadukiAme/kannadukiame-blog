---
import DarkMode from '@components/DarkMode'

const siteConfigs = {
  title: "KannadukiAme's Blog",
  nav: [
    {
      name: 'HOME',
      href: '/',
    },
    {
      name: 'BLOG',
      href: '/posts',
    },
  ],
}

const { pathname } = Astro.url
---

<header class="bg-gray-50 w-full dark:bg-stone-800">
  <div class="flex inset-x-0 container mx-auto justify-between z-10">
    <div class="flex px-2 py-4 space-x-6">
      <div class="text-gray-900 dark:text-gray-50 text-3xl font-bold">
        {siteConfigs.title}
      </div>
    </div>
    <div
      class="flex px-2 py-2 space-x-6 items-center text-gray-800 dark:text-gray-100"
    >
      {
        siteConfigs.nav.map(({ name, href }, index) => (
          <a
            class={`font-bold hover:text-sora ${
              pathname === href ? 'text-sora' : null
            } `}
            href={href}
          >
            {name}
          </a>
        ))
      }
      <div class="fill-gray-800 dark:fill-gray-100">
        <DarkMode client:load />
      </div>
    </div>
  </div>
</header>
